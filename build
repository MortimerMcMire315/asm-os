#!/bin/bash
export PATH="$(pwd)/compiler/bin:$PATH"

if [ ! -d "obj/" ]; then
    mkdir obj
fi

FILES=$(for i in $(find src | grep "\.asm$"); do echo $i; done)

SUCCESS=1

for f in $FILES; do
    FNAME=$(basename $f .asm)
    echo "===> Assembling ${FNAME}.asm..."
    nasm -f elf32 -o "obj/${FNAME}.o" $f || SUCCESS=0
    if [ $SUCCESS -eq 0 ]; then
        echo "Assembly failure!"
        exit 1
    fi
done

OBJS=$(for i in $FILES; do echo "obj/$(basename $i)"; done)

echo "===> Linking..."
i686-elf-gcc -T linker.ld -o isodir/boot/os.bin -ffreestanding -O2 -nostdlib $(echo $OBJS | sed -re 's/\.asm/.o/g') || SUCCESS=0
if [ $SUCCESS -eq 0 ]; then
    echo "Linking failure!"
    exit 1
fi

echo "===> Creating bootable disk..."
grub-mkrescue -o os.iso isodir || exit 1

echo "===> Cleaning up..."
rm obj/*.o
